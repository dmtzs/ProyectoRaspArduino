{
  "name": "terrario-app",
  "version": "1.0.0",
  "description": "The app that will be used for manage the automated terrarium",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmtzs/ProyectoRaspArduino.git"
  },
  "author": "Diego and Guillermo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dmtzs/ProyectoRaspArduino/issues"
  },
  "build": {
    "appId": "com.rasp.terrarium",
    "productName": "Terrautomaton",
    "directories": {
      "output": "Terrautomaton"
    },
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "appData.json"
        ]
      },
      {
        "from": "resources/Flask/dist/",
        "to": "./",
        "filter": [
          "Server.exe"
        ]
      }
    ],
    "nsis": {
      "allowToChangeInstallationDirectory": "true",
      "oneClick": "false"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "resources/Imgs/BoaEsmeraldaApp.ico"
    }
  },
  "dependencies": {
    "wait-port": "^0.2.9"
  },
  "devDependencies": {
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7"
  }
}
