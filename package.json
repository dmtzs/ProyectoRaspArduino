{
  "name": "terrario-app",
  "version": "1.0.0",
  "description": "The app that will be used for manage the automated terrarium",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmtzs/ProyectoRaspArduino.git"
  },
  "author": "Diego and Guillermo <gd-code@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmtzs/ProyectoRaspArduino/issues"
  },
  "build": {
    "appId": "com.rasp.terrarium",
    "productName": "TerrariumApp",
    "icon": "resources/Imgs/Boapng.png",
    "directories": {
      "output": "TerrariumApp"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": "true",
      "oneClick": "false"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/Imgs/Boapng.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "resources/Imgs/BoaEsmeraldaApp.ico"
    }
  },
  "dependencies": {
    "wait-port": "^0.2.9"
  },
  "devDependencies": {
    "electron": "^14.1.1",
    "electron-builder": "^22.13.1"
  }
}
